<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.browserdemo.aaron.browserdemo.ui.fragment.BookmarkFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/bookmark_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookmark_title"
        android:textSize="20sp"/>
    <View
        android:id="@+id/separate_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bookmark_title"
        android:background="@android:color/darker_gray">
    </View>
    <GridView
        android:id="@+id/bookmark_grid"
        android:layout_below="@+id/separate_view"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:numColumns="auto_fit"
        android:columnWidth="75dp"
        android:verticalSpacing="30dp"
        android:horizontalSpacing="25dp"
        android:scrollbarStyle="outsideInset"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

    </GridView>

</RelativeLayout>
